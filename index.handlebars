<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td><a href="/edit/{{this.id}}" class="btn btn-info">Edit</a></td>
                <td><a href="/delete/{{this.id}}" class="btn btn-danger">Delete</a></td>
            </tr>
        {{/each}}
    </tbody>
</table>


<form action="/adduser" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input id="addInput" class="form-control" type="text" name="name" placeholder="Enter your full name" />
        <button id="addUser" type="button" class="btn btn-success">Success</button>
    </div>
</form>